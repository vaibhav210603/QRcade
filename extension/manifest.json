{
    "manifest_version": 3,
    "name": "QRcade",
    "version": "1.0",
    "description": "Multiplayer controller via QR and websockets",
  
    "permissions": [
      "scripting",
      "activeTab",
      "storage"
    ],
  
    "host_permissions": [
      "<all_urls>"
    ],
  
    "background": {
      "service_worker": "background.js"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "all_frames": true
      }
    ],
  
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images.png",
        "48": "images.png",
        "128": "images.png"
      }
    },
  
    "web_accessible_resources": [
      {
        "resources": ["libs/socket.io.min.js"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  